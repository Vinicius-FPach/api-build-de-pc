generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String?
  roles    Role   @default(USER)

  builds    Build[]
}

model Hardware {
  id           String     @id @default(cuid())
  name         String
  category     String      // CPU, GPU, RAM, etc
  manufacturer String?
  specs        Json?
  price        Float?

  wattage      Int

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  builds       BuildHardware[]
}

model Build {
  id          String          @id @default(cuid())
  name        String
  userId      Int          
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  sugPsu      Int?            

  user        User            @relation(fields: [userId], references: [id])
  hardware    BuildHardware[]
}

model BuildHardware {
  id         String     @id @default(cuid())
  buildId    String
  hardwareId String
  
  build      Build      @relation(fields: [buildId], references: [id])
  hardware   Hardware   @relation(fields: [hardwareId], references: [id])

  @@unique([buildId, hardwareId])
}