  "components": {
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "CreateUserDto": {
        "type": "object",
        "properties": {}
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "joao@email.com"
          },
          "password": {
            "type": "string",
            "example": "12345678"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "CreateHardwareDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Intel Core i5-13400"
          },
          "category": {
            "type": "string",
            "example": "CPU"
          },
          "manufacturer": {
            "type": "string",
            "example": "Intel"
          },
          "specs": {
            "type": "object",
            "example": {
              "cores": 10,
              "threads": 16,
              "boost": "4.6GHz"
            }
          },
          "price": {
            "type": "number",
            "example": 1200
          },
          "wattage": {
            "type": "number",
            "example": 65
          }
        },
        "required": [
          "name",
          "category",
          "wattage"
        ]
      },
      "UpdateHardwareDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Intel Core i5-13400"
          },
          "category": {
            "type": "string",
            "example": "CPU"
          },
          "manufacturer": {
            "type": "string",
            "example": "Intel"
          },
          "specs": {
            "type": "object",
            "example": {
              "cores": 10,
              "threads": 16,
              "boost": "4.6GHz"
            }
          },
          "price": {
            "type": "number",
            "example": 1200
          },
          "wattage": {
            "type": "number",
            "example": 65
          }
        }
      },
      "CreateBuildDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Nome da montagem (ex: PC Gamer 2025)"
          },
          "sugPsu": {
            "type": "number",
            "description": "Potência de PSU sugerida em Watts."
          }
        },
        "required": [
          "name"
        ]
      },
      "AddHardwareDto": {
        "type": "object",
        "properties": {
          "hardwareId": {
            "type": "string",
            "description": "ID do Hardware a ser adicionado à montagem."
          }
        },
        "required": [
          "hardwareId"
        ]
      }
    }
